<div class="column Done khula-regular">
    <div class="top">
        <div class="title">
            <img
                src="../../public/done-icon.svg"
                width="23px"
                height="23px"
                alt="Done"
            />
            <h3 class="lexend-deca-normal">Done</h3>
        </div>
        <img
            class="col-dots"
            src="../../public/dots-icon.svg"
            width="29px"
            height="29px"
            alt="col-dots"
        />
    </div>

    <div id="done-area" class="list"></div>

    <div class="bottom"></div>
    <div class="modal-delete js-modal-delete">
        <div class="modal-container-delete">
            <div class="modal-content-delete khula-regular">
                <h3>Are you sure ?</h3>
                <p>Confirm to delete the task</p>
                <div class="btn-group">
                    <button id="cancel-delete" class="khula-regular"
                        >Cancel</button
                    >
                    <button id="confirm-delete" class="khula-regular"
                        >Delete</button
                    >
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .top,
    .bottom {
        background-color: #ffaa4a;
    }

    #done-area {
        display: flex;
        flex-direction: column;
        gap: 10px;
        padding: 10px 10px 0 10px;
        width: 100%;
        height: 100%;
    }

    .modal-delete {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        text-align: center;
        background: rgba(0, 0, 0, 50%);
        padding: 40px 20px;
        overflow: auto;
        opacity: 0;
        visibility: hidden;
        transition: 0.3s;
        box-sizing: border-box;
    }

    .modal-delete:before {
        content: "";
        display: inline-block;
        vertical-align: middle;
        height: 100%;
        margin-left: -0.2em;
    }

    .modal-delete.is-active {
        opacity: 1;
        visibility: visible;
    }

    .modal-container-delete {
        position: relative;
        display: inline-block;
        vertical-align: middle;
        max-width: 600px;
    }

    .modal-content-delete {
        width: fit-content;
        background: #fff;
        border-radius: 10px;
        text-align: left;
        line-height: 1.8;
        padding: 20px 50px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;

        h3,
        p {
            margin: 0;
        }

        .btn-group {
            display: flex;
            gap: 10px;

            button {
                background: transparent;
                border: 1px solid;
                padding: 5px 10px;
                color: #494949;
                border: 1 solid #494949;
                border-radius: 50px;
                font-size: 12px;
            }

            button:hover {
                background-color: #494949;
                color: white;
                cursor: pointer;
                transition: 0.3s;
            }
        }
    }
</style>

<script>
    import { tasksList } from "../lib/TaskList";
    const doneArea = document.querySelector("#done-area");

    if (doneArea) {
        doneArea.addEventListener("dragover", (event) =>
            tasksList.onDragOver(event),
        );
        doneArea.addEventListener("drop", (event) =>
            tasksList.onDrop(event, tasksList.done),
        );
    }
</script>
